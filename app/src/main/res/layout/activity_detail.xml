<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundLight"
        tools:context=".ui.detail.DetailActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_scrollFlags="scroll|enterAlways"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    />

    <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/loading_movie_poster"
                        android:layout_width="0dp"
                        android:layout_height="220dp"
                        android:layout_weight=".75"
                        android:layout_gravity="center_vertical"
                >

                    <View
                            android:background="@color/colorPlaceholderBackground"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                    />

                </com.facebook.shimmer.ShimmerFrameLayout>

                <ImageView
                        android:id="@+id/movie_poster"
                        android:layout_width="0dp"
                        android:layout_height="220dp"
                        android:layout_weight=".75"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/img_default"
                        android:visibility="gone"
                />


                <FrameLayout
                        android:id="@+id/loading_movie_detail_layout"
                        android:layout_marginStart="12dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.15">

                    <include layout="@layout/shimmer_movie_detail"/>

                </FrameLayout>

                <LinearLayout
                        android:id="@+id/movie_detail_layout"
                        android:layout_marginStart="12dp"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.15"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/movie_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Avatar"
                            android:maxLines="1"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/colorAccentText"
                    />

                    <TextView
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/overview"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccentText"
                    />

                    <TextView
                            android:layout_marginTop="2dp"
                            android:id="@+id/movie_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="In the 22nd century, a paraplegic Marine is dispatched to the moon Pandora on a unique mission, but becomes torn between following orders and protecting an alien civilization."
                            android:textSize="12sp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textColor="@color/colorAccentText"
                    />

                    <TextView
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/release_information"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccentText"
                    />

                    <TextView
                            android:layout_marginTop="2dp"
                            android:id="@+id/movie_release_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="December 18, 2009"
                            android:textSize="12sp"
                            android:textColor="@color/colorAccentText"
                    />

                    <TextView
                            android:visibility="gone"
                            android:id="@+id/movie_language_label"
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/original_language"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccentText"
                    />

                    <TextView
                            android:visibility="gone"
                            android:layout_marginTop="2dp"
                            android:id="@+id/movie_language"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="English"
                            android:textSize="12sp"
                            android:textColor="@color/colorAccentText"
                    />

                    <TextView
                            android:visibility="gone"
                            android:id="@+id/movie_runtime_label"
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/runtime"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccentText"
                    />

                    <TextView
                            android:visibility="gone"
                            android:layout_marginTop="2dp"
                            android:id="@+id/movie_runtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="2h 42m"
                            android:textSize="12sp"
                            android:textColor="@color/colorAccentText"
                    />

                    <TextView
                            android:visibility="gone"
                            android:id="@+id/movie_budget_label"
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/budget"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccentText"
                    />

                    <TextView
                            android:visibility="gone"
                            android:layout_marginTop="2dp"
                            android:id="@+id/movie_budget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="$237,000,000.00"
                            android:textSize="12sp"
                            android:textColor="@color/colorAccentText"
                    />

                    <TextView
                            android:visibility="gone"
                            android:id="@+id/movie_revenue_label"
                            android:layout_marginTop="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/revenue"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccentText"
                    />

                    <TextView
                            android:visibility="gone"
                            android:layout_marginTop="2dp"
                            android:id="@+id/movie_revenue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="$2,787,965,087.00"
                            android:textSize="12sp"
                            android:textColor="@color/colorAccentText"
                    />

                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                    android:visibility="gone"
                    android:id="@+id/loading_cast_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <include layout="@layout/shimmer_cast"/>

            </FrameLayout>

            <LinearLayout
                    android:id="@+id/movie_cast_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cast"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccentText"
                />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/movie_cast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

            <FrameLayout
                    android:visibility="gone"
                    android:id="@+id/loading_genre_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <include layout="@layout/shimmer_genre"/>

            </FrameLayout>

            <LinearLayout
                    android:id="@+id/movie_genres_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/genres"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccentText"
                />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/movie_genre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

            <FrameLayout
                    android:visibility="gone"
                    android:id="@+id/loading_movie_similar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <include layout="@layout/shimmer_movie_similar"/>

            </FrameLayout>

            <LinearLayout
                    android:id="@+id/movie_similar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/movie_similar_label"
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/similar_movies"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccentText"
                />

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/movie_similar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>